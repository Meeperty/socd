<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:socd.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
		Width="200"
		Height="200"
        x:Class="socd.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="socd">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Panel Background="Black">
		<ListBox
			Background="Black"
			Classes="RadioButtonListBox"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Items="{Binding KeyOptions}"
			SelectedItems="{Binding SelectedKeys}">
		</ListBox>
		<!--TextBlock Text="{Binding FocusedProcess}"
				   HorizontalAlignment="Right"
				   VerticalAlignment="Bottom"/ -->
		<TextBlock Text="{Binding KBHookSet}"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Bottom"/>
	</Panel>
	
</Window>
