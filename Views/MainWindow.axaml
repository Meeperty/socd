<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:socd.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="200"
		Width="350"
		Height="200"
        x:Class="socd.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="socd">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<DockPanel Background="Black">
		<ListBox
			Background="Black"
			Classes="RadioButtonListBox"
			DockPanel.Dock="Left"
			Items="{Binding KeyOptions}"
			SelectedItem="{Binding SelectedKeys}"
			Padding="10">
		</ListBox>
		
		<DockPanel DockPanel.Dock="Left"
				   VerticalAlignment="Top">
			<TextBlock DockPanel.Dock="Top"
					   Padding="10, 10, 10, 0">
				Disable Bind (hex):
			</TextBlock>
			<DockPanel DockPanel.Dock="Top">
				<TextBox x:Name="DBTextBox"
						 Text="{Binding DisableBindCodeString}"
						 DockPanel.Dock="Left"/>
				<TextBlock Text="{Binding DisableBindKeyString}"
						   VerticalAlignment="Center"/>
			</DockPanel>

		</DockPanel>
	</DockPanel>
	
</Window>
